<Window x:Class="DesktopInk.Windows.UpdateNotificationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Desktop Ink - Update Available"
        Icon="/Assets/app-icon.ico"
        Width="520"
        Height="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#FF1E1E1E"
        Foreground="White">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="A new version of Desktop Ink is available." FontSize="16" FontWeight="SemiBold" />

        <StackPanel Grid.Row="1" Margin="0,12,0,12">
            <DockPanel Margin="0,0,0,4">
                <TextBlock Text="Current Version:" Width="140" />
                <TextBlock x:Name="CurrentVersionText" Text="-" />
            </DockPanel>
            <DockPanel>
                <TextBlock Text="Latest Version:" Width="140" />
                <TextBlock x:Name="LatestVersionText" Text="-" />
            </DockPanel>
        </StackPanel>

        <Border Grid.Row="2" Background="#FF2B2B2B" CornerRadius="6" Padding="8">
            <TextBox x:Name="ReleaseNotesText"
                     Text="Loading release notes..."
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled"
                     Background="#FF2B2B2B"
                     Foreground="White"
                     BorderThickness="0" />
        </Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="160" Margin="0,0,8,0" Content="Open Download Page" Click="OnOpenDownloadClick" />
            <Button Width="110" Margin="0,0,8,0" Content="Remind Later" Click="OnRemindLaterClick" />
            <Button Width="110" Content="Skip This Version" Click="OnSkipVersionClick" />
        </StackPanel>
    </Grid>
</Window>
